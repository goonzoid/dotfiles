[user]
	name = Will Pragnell
	email = wpragnell@gmail.com
[core]
	autocrlf = input
	editor = /usr/bin/vim
[color]
  ui = auto
[merge]
  tool = opendiff
[alias]
  st = status
  ci = commit
  ca = commit -a
  cm = commit -m
  cam = commit -a -m
  co = checkout
  cb = checkout -b
  b = branch
  ba = branch -a
  bd = branch -d
  bdel = branch -D
  rs = reset
  di = diff
  dc = diff --cached
  dh1 = diff HEAD~1
  amend = commit --amend
  aa = add --all
  au = add -u
  ap = add -p
  puff = pull --ff-only
  purb = pull --rebase
  rb = rebase
  ri = rebase -i
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  r = !git l -16
  ra = !git r --all
