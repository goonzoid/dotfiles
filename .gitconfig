[user]
	name = Will Pragnell
	email = wpragnell@gmail.com
[core]
	autocrlf = input
	attributesfile = ~/.gitattributes
	excludesfile = ~/.global_gitignore
	pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
[color]
	ui = auto
[alias]
	st = status
	ci = commit --verbose
	co = checkout
	br = branch
	rs = reset
	di = diff
	diw = diff -w
	dc = diff --cached
	dcw = diff --cached -w
	dh1 = diff HEAD~1
	dr = diff -w -U20
	amend = commit --amend
	aa = add --all
	ap = add --all -p
	au = add -u
	puff = pull --ff-only
	purb = pull --rebase
	rb = rebase
	ri = rebase -i
	l = "!source ~/.githelpers && pretty_git_log"
	la = !git l --all
	lg = !git l -16
	lga = !git r --all
	sl = stash list
	sp = stash pop
	su = submodule update --init --recursive
	sno = show --name-only
	sns = show --name-status
[github]
	user = goonzoid
[push]
	default = current
[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "http://github.com/"
	pushInsteadOf = "gh:"
	pushInsteadOf = "gh://"
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[advice]
	statusHints = false

# vim: noexpandtab
